<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGreyTransparent">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/divBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_card_top_round"
        android:padding="@dimen/_10sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right">
            <ImageView
                android:id="@+id/divClose"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_baseline_clear_24"
                android:layout_marginRight="@dimen/_8sdp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/ic_prokes_vector"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_1sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="Ingat !!!"
                android:textColor="@color/txtBlack"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/montserrat_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_1sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="Tetap Patuhi Protokol Kesehatan dan Tingkatkan Kewaspadaan Selama Melakukan Olahraga"
                android:textColor="@color/txtBlack"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="@dimen/_10sdp"/>

            <Button
                android:id="@+id/btnProkesNext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:background="@drawable/roundedbutton"
                android:text="Baik"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>





    </LinearLayout>

</RelativeLayout>
    <ScrollView
        android:layout_marginTop="@dimen/_180sdp"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="@drawable/bg_card_top_round">

        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/divProfileBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">
            //Username

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/username_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="Username"
                android:textColorHint="@color/txtSemiGrey"
                android:theme="@style/ProfileText"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusTopEnd="3dp"
                app:boxCornerRadiusTopStart="3dp">

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="@color/txtBlack"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            //Nama

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nama_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="Nama"
                android:textColorHint="@color/txtSemiGrey"
                android:theme="@style/ProfileText"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusTopEnd="3dp"
                app:boxCornerRadiusTopStart="3dp">

                <EditText
                    android:id="@+id/et_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="@color/txtBlack"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            //Email

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="Email"
                android:textColorHint="@color/txtSemiGrey"
                android:theme="@style/ProfileText"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusTopEnd="3dp"
                app:boxCornerRadiusTopStart="3dp">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="@color/txtBlack"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            //Phone

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="No. Ponsel"
                android:textColorHint="@color/txtSemiGrey"
                android:theme="@style/ProfileText"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusTopEnd="3dp"
                app:boxCornerRadiusTopStart="3dp">

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="@color/txtBlack"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            //Alamat

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/alamat_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="Alamat"
                android:textColorHint="@color/txtSemiGrey"
                android:theme="@style/ProfileText"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusTopEnd="3dp"
                app:boxCornerRadiusTopStart="3dp">

                <EditText
                    android:id="@+id/et_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="@color/txtBlack"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvuser_teman"
                android:layout_width="375dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/bg_round"
                android:backgroundTint="@color/nah"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Ingin Login sebagai Teman "
                android:textAlignment="center"
                android:textColor="@color/txtWhite"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <com.example.temanjalan.custom.CustomTextViewBold
                android:id="@+id/tvLogOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_rectangle_01b"
                android:backgroundTint="@color/red_btn_bg_color"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/_12ssp"
                android:text="LOG OUT"
                android:textColor="#fff"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />



        </LinearLayout>



    </ScrollView>

</RelativeLayout>
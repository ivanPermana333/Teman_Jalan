<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SeeAllActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_card_top_round">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_putih"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:paddingTop="@dimen/_1sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="Result For"
                        android:textColor="@color/txtBlack"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:paddingTop="@dimen/_1sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:textColor="@color/txtBlack"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_1sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/txtBlack"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_10sdp"/>
                <ImageView
                    android:id="@+id/ivReload"
                    android:visibility="gone"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/ic_replay"
                    android:tint="@color/nah"
                    />
            </LinearLayout>


            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="match_parent"
                android:layout_height="992dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">

                <!-- Adding 3 rows of placeholders -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/item_placeholder_field" />

                    <include layout="@layout/item_placeholder_field" />

                    <include layout="@layout/item_placeholder_field" />

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:id="@+id/rv_Temans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_teman"/>

            <!--            <include layout="@layout/item_field"/>-->
            <!--            <include layout="@layout/item_field"/>-->
            <!--            <include layout="@layout/item_field"/>-->
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
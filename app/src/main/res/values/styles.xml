<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nah</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/nah</item>
    </style>

    <style name="AppThemeNoAcitonBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="DashboardAppThemeNoAcitonBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="ProfileText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/nah</item>
        <item name="android:textStyle">normal</item>
        <item name="colorAccent">@color/nah</item>
        <item name="colorControlNormal">@color/nah</item>
        <item name="colorControlActivated">@color/nah</item>
    </style>

    <style name="RoundedOutlineEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">50dp</item>
        <item name="boxCornerRadiusBottomStart">50dp</item>
        <item name="boxCornerRadiusTopEnd">50dp</item>
        <item name="boxCornerRadiusTopStart">50dp</item>
    </style>

    <style name="RoundedOutlineEditTextBlueGreen" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="android:textColorHint">@color/nah</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/txtWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="colorAccent">@color/txtWhite</item>
        <item name="colorControlNormal">@color/txtWhite</item>
        <item name="colorControlActivated">@color/txtWhite</item>
    </style>
</resources>
